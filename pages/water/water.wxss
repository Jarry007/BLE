/* pages/water/water.wxss */
page{
   background-color: #3D4660;
   background-image: linear-gradient(160deg,#3D4660 0%,#1D2332 100%);
}

.logo{
   position: absolute;
   font-size: 100rpx;
   color: #ffd3b2;
   top:200rpx;
   left:100rpx;
   
   height: 200rpx;
   width: 400rpx;
   z-index: 2
}

.logo-title{
   margin-left: 20rpx;
   font-size: 50rpx;
   font-weight: 550;
   letter-spacing: 4rpx;
}

.login{
   width: 100%;
   height: 40vh;
   position: absolute;
   z-index: 2;
  
   bottom: 0;
}
.login-btn{
   width: 80%;
   margin: 10%;
   height: 100rpx;
   background: #ffd3b2;
   color: #3D4660;
   font-size: 32rpx;
   text-align: center;
   line-height: 100rpx;
   font-weight: 550;
   letter-spacing:3rpx;
}

.phone{
   position: absolute;
   z-index: 2;
   font-size: 44rpx;
   width: 80%;
   margin-left: 10%;
   text-align: center;
   bottom: calc(40vh + 20rpx);
   color: #ffd3b2;
   height: 100rpx;
   line-height: 100rpx;
}


.input{
  
   border-bottom: 1rpx solid #ffd3b2;
   height: 100rpx;
   line-height: 100rpx;

   color: #ffd3b2;
   justify-content: space-between;
   padding-left: 20rpx;
}