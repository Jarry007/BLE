/* pages/component/line/line.wxss */
.list{
   width: 100%;
   display: flex;
   height: 80rpx;
   line-height: 80rpx;
}

.label{
   margin-left: 40rpx;
   flex: 3;
   /* background: blue; */
   font-size: 24rpx;
   overflow: scroll;
   /* text-overflow:ellipsis; */
   white-space: nowrap; 
   font-weight: 500

   

}
.line{
   flex: 6;
   background: rgba(191, 199, 236, 0.6);
   height: 12rpx;
   border-top-right-radius:20rpx;
   border-bottom-right-radius: 20rpx;
   margin:auto 16rpx;
   position: relative;
}

.value{
   flex: 2;
   /* background:greenyellow */
   color: #aaa;
}

.active{
   height: inherit;
   background: #2d6ef4;
   border-top-right-radius:20rpx;
   border-bottom-right-radius: 20rpx;
   transition: all .3s ease-in
}

.label .cur{
   width: 30rpx;
   height: 30rpx;
   margin: auto 0;
   line-height: 30rpx;
   color: #fff;
   font-size: 22rpx;
   font-weight: 500;
   text-align: center;
   background: #c1bcbc;
   /* border: 1rpx solid #ddd; */
   display: inline-block;
   border-top-left-radius: 50%;
   border-top-right-radius: 50%;
   border-bottom-left-radius: 50%;
}